{
  "direct_mappings": {
    "{{DocumentDate}}": "current_date",
    "{{SenderName}}": "sender.full_name"
  },
  "type_rules": {
    "date": "YYYY-MM-DD",
    "currency": "USD"
  },
  "nested_paths": {
    "opportunity.line_items": {
      "source_path": "LoopThroughOpportunityLineItems",
      "fields": {
        "{{ProductName}}": "product.name",
        "{{Quantity}}": "quantity",
        "{{UnitPrice}}": "unit_price"
      }
    }
  }
}
